<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/data_structures_section_nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.Community.Sections.DataStructuresSection">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <include layout="@layout/material_view_pager_placeholder"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:id="@+id/data_structures_section_recycler_view"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

            </androidx.recyclerview.widget.RecyclerView>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">

            <!-- Segment Tree -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="5dp"
                    app:contentPadding="15dp"
                    style="@style/Widget.MaterialComponents.CardView"
            >

                <!--Componentes-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <!--Translated title-->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Segmentation Tree"
                            android:textSize="13dp"/>

                    <!--Title-->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Árvore de Segmentação"
                            android:textSize="19dp"/>

                    <!--Image preview-->
                    <pl.droidsonroids.gif.GifImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/segmenttree"/>

                    <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">

                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="dividir e conquistar"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="propagação lenta"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>
                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dado uma cadeia contínua, efetue buscas e modificações em tempo logarítmico."
                            android:layout_marginBottom="5dp"/>

                    <!--Butões de ação-->
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ler tudo"
                                    style="@style/Widget.MaterialComponents.Button"
                            />

                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="excluir"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        </LinearLayout>

                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                style="?android:attr/actionOverflowButtonStyle"/>


                    </RelativeLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- DSU -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="5dp"
                    app:contentPadding="15dp"
                    style="@style/Widget.MaterialComponents.CardView"
            >

                <!--Componentes-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <!--Translated title-->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disjoints Sets Union"
                            android:textSize="13dp"/>

                    <!--Title-->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="União de Conjuntos Disjuntos"
                            android:textSize="19dp"/>

                    <!--Image preview-->
                    <pl.droidsonroids.gif.GifImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/ufds"/>

                    <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">

                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="amortização"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="rollback"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="callback"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Efetue operações de união, reverter última união e de encontrar conjunto do elemento após a i-ésima união em tempo amortizado."
                            android:layout_marginBottom="5dp"/>

                    <!--Butões de ação-->
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ler tudo"
                                    style="@style/Widget.MaterialComponents.Button"
                            />

                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="excluir"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        </LinearLayout>

                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                style="?android:attr/actionOverflowButtonStyle"/>


                    </RelativeLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Fenwick Tree -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="5dp"
                    app:contentPadding="15dp"
                    style="@style/Widget.MaterialComponents.CardView"
            >

                <!--Componentes-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <!--Translated title-->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fenwick Tree"
                            android:textSize="13dp"/>

                    <!--Title-->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Árvore de Fenwick"
                            android:textSize="19dp"/>

                    <!--Image preview-->
                    <pl.droidsonroids.gif.GifImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/fenwicktree"/>

                    <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">

                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="soma de prefixos"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calcule e faça atualizações de soma de prefixos em cadeias multidimensionais."
                            android:layout_marginBottom="5dp"/>

                    <!--Butões de ação-->
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ler tudo"
                                    style="@style/Widget.MaterialComponents.Button"
                            />

                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="excluir"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        </LinearLayout>

                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                style="?android:attr/actionOverflowButtonStyle"/>


                    </RelativeLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Binary Heap-->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="5dp"
                    app:contentPadding="15dp"
                    style="@style/Widget.MaterialComponents.CardView"
            >

                <!--Componentes-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <!--Translated title-->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Binary Heap"
                            android:textSize="13dp"/>

                    <!--Title-->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heap Binária"
                            android:textSize="19dp"/>

                    <!--Image preview-->
                    <pl.droidsonroids.gif.GifImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/heap"/>

                    <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">

                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="fila de prioridade"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="recursão"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>
                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Implemente uma fila de prioridade com inserção e deleção em tempo logarítimico, junto de busca em tempo constante."
                            android:layout_marginBottom="5dp"/>

                    <!--Butões de ação-->
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ler tudo"
                                    style="@style/Widget.MaterialComponents.Button"
                            />

                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="excluir"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        </LinearLayout>

                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                style="?android:attr/actionOverflowButtonStyle"/>


                    </RelativeLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>