<?xml version="1.0" encoding="utf-8"?>
<manifest package="br.com.gema" xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="GEMA UFAL"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:replace="android:label">
        <activity android:name=".Login.LoginLobby">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".Account.RankPreviewArea"/>
        <activity android:name=".Login.Handler.FacebookLoginHandler"/>
        <activity android:name=".Login.Handler.GoogleLoginHandler"/>
        <activity android:name=".Account.AccountManageLobby"/>
        <activity android:name=".MainLobby"/>
        <activity android:name=".Fragments.Community.Forum.Management.NewPostArea"/>
    </application>

</manifest>

